{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testRegex": "test/e2e/.*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", { "tsconfig": "<rootDir>/tsconfig.json" }]
  },
  "testEnvironment": "node",
  "coverageDirectory": "../coverage-e2e",
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/back/src/$1"
  }
}
